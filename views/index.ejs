<!DOCTYPE html>
<html>
<!-- used bootstrap for styling -->
<head>
  <title>Restaurants</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"

  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <div class="d-flex align-items-start">
  
    <select id="filters">
      <option value="">--Select a filter--</option>
      <option value="country">Country</option>
      <option value="city">City</option>
      <option value="cuisine">Cuisine</option>
    </select>
    <select id="types">
      <option value ="">--Select a type--</option>
    </select>

    <form action="/">
    <button type="button" class="btn btn-info" id="filterButton">Apply Filter</button>
   
    <button type="submit" class="btn  btn-danger" id="clearButton">Clear Filter</button>
    </form>

    
    
  </div>
  <!-- <script type="text/javascript" src="script.js"></script> -->
  <table  class="table table-striped" id="resultTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>City</th>
        <th>Cuisine Type</th>
      </tr>
    </thead>
    <tbody>

    </tbody>
  </table>

  <div class="d-flex justify-content-between">
  <button class="btn btn-info" id="previous">Previous</button>
  
  <lable id="noPage"></lable>
   
  <button  class="btn btn-info" id="next">Next</button>
  </div>
  <p>
    <label>Rows To Display: </label>
    <select name="page" id="perPage">
      <option value="5">5</option>
      <option value="10">10</option>
      <option value="25">25</option>
      <option value="50">50</option>
    </select>
  </p>
  <script type="text/javascript" src="script.js"></script>
  <script type="text/javascript" src="filter.js"></script>
</body>

</html>